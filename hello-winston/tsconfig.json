{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2017"
        ],
        "outDir": "./build",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "rootDir": "."
    },
    "include": [
        "src"
    ],
    "exclude": [
        "build",
        "node_modules"
    ],
    "compileOnSave": true
}